/* Q find out  Mark and John are trying to compare their BMI (Body Mass Index), which is
calculated using the formula:
BMI = mass / height ** 2 = mass / (height * height) (mass in kg
and height in meter */


const massMark =78 ; 
const heightMark =1.69 ;
const massjohn= 92;
const heightjohn= 1.95;

const BIMmark= massMark/ heightMark**2;
const BIMjohn = massjohn/(heightjohn* heightjohn);
const markheightIBM = BIMmark>BIMjohn;

console.log(BIMjohn,BIMmark,markheightIBM);


